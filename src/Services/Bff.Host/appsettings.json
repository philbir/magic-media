{
  "Logging": {
    "LogLevel": {
      "Default": "Information"
    }
  },
  "AllowedHosts": "*",
  "Telemetry": {
    "ServiceName": "Media-Bff"
  },
  "MagicMedia": {
    "Security": {
      "Authority": "http://localhost:5500",
      "ClientId": "Media.UI",
      "Secret": "XXX"
    },
    "Bff": {
      "DataProtectionKeysDirectory": "./dp-keys",
      "Yarp": {
        "Routes": {
          "api": {
            "ClusterId": "cluster1",
            "Match": {
              "Path": "/api/{**catch-all}"
            },
            "Metadata": {
              "Duende.Bff.Yarp.TokenType": "User",
              "Duende.Bff.Yarp.AntiforgeryCheck" : "true"
            }
          },
          "graphql": {
            "ClusterId": "cluster1",
            "Match": {
              "Path": "/graphql/{**catch-all}"
            },
            "Metadata": {
              "Duende.Bff.Yarp.TokenType": "User",
              "Duende.Bff.Yarp.AntiforgeryCheck" : "true"
            }
          },
          "signalr": {
            "ClusterId": "cluster1",
            "Match": {
              "Path": "/signalr/{**catch-all}"
            },
            "Metadata": {
              "Duende.Bff.Yarp.TokenType": "User",
              "Duende.Bff.Yarp.AntiforgeryCheck" : "true"
            }
          }
        },
        "Clusters": {
          "cluster1": {
            "HttpClient": {
              "DangerousAcceptAnyServerCertificate": "true"
            },
            "Destinations": {
              "destination1": {
                "Address": "http://localhost:5000"
              }
            }
          }
        }
      }
    }
  }
}
